# ================================================
# MyDetailArea Environment Configuration
# ================================================

# ================================================
# SUPABASE CONFIGURATION
# ================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (SERVER-SIDE ONLY - DO NOT EXPOSE TO CLIENT)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ================================================
# OAUTH & INTEGRATIONS
# ================================================

# Slack OAuth Configuration
# Get credentials from: https://api.slack.com/apps
VITE_SLACK_CLIENT_ID=123456789.123456789
SLACK_CLIENT_SECRET=your-slack-client-secret-here

# OAuth Redirect URIs (must match app configuration)
VITE_OAUTH_REDIRECT_URI=http://localhost:8080/api/slack/callback

# ================================================
# SECURITY & ENCRYPTION
# ================================================

# Encryption key for sensitive data (32 bytes hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Webhook signing secrets (generate unique per integration)
WEBHOOK_SECRET=your-webhook-secret-here

# ================================================
# THIRD-PARTY APIs
# ================================================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Resend (Email Service)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key-here

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@mydetailarea.com
EMAIL_FROM_NAME=My Detail Area

# VIN Decoding API
VIN_DECODER_API_KEY=your-vin-decoder-api-key

# ================================================
# ANALYTICS & MONITORING
# ================================================

# Application monitoring
SENTRY_DSN=your-sentry-dsn-here

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ================================================
# DEVELOPMENT
# ================================================

# Development mode
NODE_ENV=development

# API base URL
VITE_API_BASE_URL=http://localhost:8080

# Enable debug logging
VITE_DEBUG=false

# ================================================
# FEATURE FLAGS
# ================================================

# Enable integrations module
VITE_FEATURE_INTEGRATIONS=true

# Enable Slack integration
VITE_FEATURE_SLACK=true

# Enable webhooks
VITE_FEATURE_WEBHOOKS=true

# Enable custom SMTP
VITE_FEATURE_CUSTOM_SMTP=true

# ================================================
# RATE LIMITING
# ================================================

# API rate limits (requests per window)
RATE_LIMIT_SLACK_SEND=100
RATE_LIMIT_WEBHOOK_DELIVER=500
RATE_LIMIT_SMS_SEND=50
RATE_LIMIT_EMAIL_SEND=200

# Rate limit window (minutes)
RATE_LIMIT_WINDOW=60

# ================================================
# SECURITY POLICIES
# ================================================

# Audit log retention (days)
AUDIT_LOG_RETENTION_DAYS=90

# OAuth state token expiration (minutes)
OAUTH_STATE_EXPIRATION=10

# Maximum failed login attempts
MAX_LOGIN_ATTEMPTS=5

# Session timeout (minutes)
SESSION_TIMEOUT=480

# ================================================
# DEPLOYMENT (PRODUCTION ONLY)
# ================================================

# Production domain
PRODUCTION_DOMAIN=https://app.mydetailarea.com

# CDN URL
CDN_URL=https://cdn.mydetailarea.com

# Enable HSTS
ENABLE_HSTS=true

# Enable CSP
ENABLE_CSP=true

# ================================================
# FIREBASE CLOUD MESSAGING (FCM)
# ================================================

# Firebase Project Configuration
# Get from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# FCM VAPID Key (Web Push Certificates)
# Get from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FCM_VAPID_KEY=your-vapid-key-here

# ================================================
# NOTES
# ================================================
# - Never commit this file with real credentials
# - Use Supabase secrets for production: supabase secrets set KEY=value
# - Rotate encryption keys quarterly
# - Keep service role key secure (server-side only)
# - Use different keys for development and production
